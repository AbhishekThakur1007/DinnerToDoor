<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/dialog_outline">

    <RelativeLayout
        android:id="@+id/layyy1"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/HeadingLocButton11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:drawablePadding="8dp"
            android:fontFamily="@font/staatliches_regular"
            android:text="Set Order accept limit "
            android:textColor="@color/quantum_black_text"
            android:textSize="30sp"
            app:drawableTint="@color/quantum_black_text" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/SetLimitLay"
            android:layout_alignStart="@+id/HeadingLocButton11"
            android:layout_alignEnd="@+id/HeadingLocButton11"
            android:layout_below="@+id/HeadingLocButton11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="20dp"
            android:hint="Type Limit"
            app:boxStrokeColor="@color/design_default_color_on_secondary"
            app:boxStrokeWidthFocused="2dp"
            app:startIconTint="@color/design_default_color_on_secondary"
            app:endIconMode="clear_text"
            app:endIconTint="@color/design_default_color_on_secondary"
            app:hintTextColor="@color/cardview_dark_background">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditOder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorHint="@color/quantum_grey700" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SetLimitLay"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/ButtonMaLay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_state_default"
                tools:ignore="ExtraText">

                //Button

                <Button
                    android:id="@+id/NoSpecial1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_design"
                    android:elevation="10dp"
                    android:text="No"
                    android:textColor="@color/design_default_color_surface"
                    android:textSize="15sp"
                    android:transitionName="transition_next_btn" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/YesLay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_state_default"
                tools:ignore="ExtraText">

                //Button

                <Button
                    android:id="@+id/YesLimit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_design"
                    android:elevation="10dp"
                    android:text="Yes"
                    android:textColor="@color/design_default_color_surface"
                    android:textSize="15sp"
                    android:transitionName="transition_next_btn" />

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
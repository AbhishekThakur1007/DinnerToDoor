<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/rectangle_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleX="0.8"
            android:id="@+id/DeleteFromRecycler"
            android:layout_marginStart="40dp"
            android:scaleY="0.8"
            android:src="@drawable/cross" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/QuanRe"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/staatliches_regular"
            android:textColor="@color/quantum_black_text"
            android:text="Quantity :"/>

        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/NameQuan"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@color/quantum_black_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@color/quantum_black_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/NameSize"
            android:text="Unit :"
            android:textSize="15sp"
            android:fontFamily="@font/staatliches_regular"
            android:textAlignment="center"
            android:textColor="@color/quantum_black_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/UnitName"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@color/quantum_black_text"
            android:layout_width="match_parent"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@color/quantum_black_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Amount"
            android:text="Price :"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="15sp"
            android:fontFamily="@font/staatliches_regular"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:textColor="@color/quantum_black_text"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/AmountName"
            android:layout_weight="1"
            android:textColor="@color/quantum_black_text"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/currency_inr" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@color/quantum_black_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/DiscountDis"
            android:text="Discount :"
            android:fontFamily="@font/staatliches_regular"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/quantum_black_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/DiscountPrice"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/quantum_black_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/currency_inr" />

    </LinearLayout>

</LinearLayout>
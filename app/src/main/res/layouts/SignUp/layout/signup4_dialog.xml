<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/dialog_outline"
    android:layout_height="wrap_content">

    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/HeadingLocButton"
            android:layout_width="wrap_content"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/staatliches_regular"
            android:layout_height="wrap_content"
            android:text="Current Location"
            android:textColor="@color/quantum_black_text"
            android:drawablePadding="5dp"
            app:drawableStartCompat="@drawable/ic_baseline_gps_fixed" />

        //Button
        <Button
            android:id="@+id/Automatic1"
            android:layout_below="@+id/HeadingLocButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_design"
            android:elevation="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:text="Automatic"
            android:layout_marginBottom="20dp"
            android:textColor="@color/design_default_color_surface"
            android:textSize="15sp"
            android:transitionName="transition_next_btn" />

        //Button
        <Button
            android:id="@+id/Manual1"
            android:layout_below="@+id/Automatic1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/button_design"
            android:elevation="10dp"
            android:text="Manually"
            android:textColor="@color/design_default_color_surface"
            android:textSize="15sp"
            android:transitionName="transition_next_btn" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>